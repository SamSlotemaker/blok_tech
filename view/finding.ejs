<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs') %>

<body>

    <%- include('header.ejs') %>

    <main>
        <section class="choice">
            <form action="/sendImage" method="POST">
                <h1>Choose one</h1>
                <h2>Pick the one you like to most, to find your match!</h2>
                <div>

                    <label>
                        <input type="radio" name="car" value="1">
                        <img src=<%= data.imageUrl1 %> alt="image of car one" width='100%'';>
                    </label>

                    <img src="images/icons/like.svg" alt="heart image" class="heart">

                    <label>
                        <input type="radio" name="car" value="2">
                        <img src=<%= data.imageUrl2 %> alt="image of car two">
                    </label>
                </div>
                <button type="submit">Next question</button>
            </form>
        </section>
    </main>


    <%- include('footer.ejs') %>
    <script src="/script/script.js"></script>
</body>

</html>